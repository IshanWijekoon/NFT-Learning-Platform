    <script>
        // NFT Certificate Search functionality
        class NFTCertificateSearch {
            constructor() {
                this.certificates = this.initializeCertificates();
                this.init();
            }

            initializeCertificates() {
                // Simulated NFT certificate data
                return [
                    {
