                        title: 'React Development Professional',
                        courseName: 'Advanced React & Redux Course',
                        ownerName: 'Sarah Johnson',
                        walletAddress: '0x9f8E7D6C5B4A3928F1234567890AbCdEf987654321',
                        dateIssued: '2024-02-28',
                        verificationStatus: 'verified',
                        issuer: 'EduPlatform Academy',
