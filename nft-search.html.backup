                        creditsEarned: 60
                    },
                    {
                        id: 'CERT-2024-003',
                        title: 'Python Data Science Specialist',
                        courseName: 'Python for Data Science & Machine Learning',
                        ownerName: 'Michael Chen',
                        walletAddress: '0x1a2B3c4D5e6F7g8H9i0J1k2L3m4N5o6P7q8R9s0T',
                        dateIssued: '2024-01-20',
                        verificationStatus: 'verified',
                        issuer: 'EduPlatform Academy',
                        grade: 'A-',
                        creditsEarned: 50
                    },
                    {
                        id: 'CERT-2024-004',
                        title: 'Blockchain Development Certificate',
                        courseName: 'Ethereum Smart Contract Development',
                        ownerName: 'Emily Rodriguez',
                        walletAddress: '0xaB1cD2eF3g4H5i6J7k8L9m0N1o2P3q4R5s6T7u8V',
                        dateIssued: '2024-04-10',
                        verificationStatus: 'pending',
                        issuer: 'EduPlatform Academy',
                        grade: 'B+',
                        creditsEarned: 45
                    },
                    {
                        id: 'CERT-2024-005',
                        title: 'UI/UX Design Professional',
                        courseName: 'Complete UI/UX Design Masterclass',
                        ownerName: 'David Wilson',
                        walletAddress: '0x2B3c4D5e6F7g8H9i0J1k2L3m4N5o6P7q8R9s0T1u',
                        dateIssued: '2024-03-05',
                        verificationStatus: 'verified',
                        issuer: 'EduPlatform Academy',
                        grade: 'A',
                        creditsEarned: 35
                    }
                ];
            }

            init() {
                this.setupEventListeners();
                this.loadSearchHistory();
            }

            setupEventListeners() {
                const searchForm = document.getElementById('searchForm');
                const searchBtn = document.getElementById('searchBtn');
                const resetBtn = document.getElementById('resetBtn');
                const searchInput = document.getElementById('certificateId');

                // Form submission
                searchForm.addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.performSearch();
                });

                // Reset button
                resetBtn.addEventListener('click', () => {
                    this.resetSearch();
                });

                // Real-time input validation
                searchInput.addEventListener('input', () => {
                    this.validateInput();
                });

                // Enter key support
                searchInput.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        this.performSearch();
                    }
                });
            }

            validateInput() {
                const searchInput = document.getElementById('certificateId');
                const searchBtn = document.getElementById('searchBtn');
                const value = searchInput.value.trim();

                searchBtn.disabled = value.length < 3;
            }

            async performSearch() {
                const searchInput = document.getElementById('certificateId');
                const certificateId = searchInput.value.trim().toUpperCase();

                if (!certificateId) {
                    this.showError('Please enter a certificate ID');
                    return;
                }

                this.showLoadingState(true);

                try {
                    // Simulate API call delay
                    await new Promise(resolve => setTimeout(resolve, 1500));

                    const certificate = this.findCertificate(certificateId);

                    if (certificate) {
                        this.displayCertificate(certificate);
                        this.saveToHistory(certificateId);
                    } else {
                        this.showNoResults();
                    }

                } catch (error) {
                    console.error('Search error:', error);
                    this.showError('An error occurred while searching. Please try again.');
                } finally {
                    this.showLoadingState(false);
                }
            }

            findCertificate(certificateId) {
                return this.certificates.find(cert => 
                    cert.id.toUpperCase() === certificateId.toUpperCase()
                );
            }

            displayCertificate(certificate) {
                const resultsSection = document.getElementById('resultsSection');
                const noResultsSection = document.getElementById('noResultsSection');
                const certificateDetails = document.getElementById('certificateDetails');

                // Hide no results section
                noResultsSection.classList.remove('show');

                // Create certificate badge
                const badge = this.createCertificateBadge(certificate);

                // Create certificate details
                const details = this.createCertificateDetails(certificate);

                // Update content
                certificateDetails.innerHTML = badge + details;

                // Show results with animation
                setTimeout(() => {
                    resultsSection.classList.add('show');
                }, 100);

                // Scroll to results
                resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            createCertificateBadge(certificate) {
                return `
                    <div class="certificate-badge">
                        <h3>üéì ${certificate.title}</h3>
                        <p>Issued by ${certificate.issuer}</p>
                    </div>
                `;
            }

            createCertificateDetails(certificate) {
                const formattedDate = this.formatDate(certificate.dateIssued);
                const statusBadge = this.createStatusBadge(certificate.verificationStatus);

                return `
                    <div class="detail-item">
                        <div class="detail-label">Certificate ID:</div>
                        <div class="detail-value"><strong>${certificate.id}</strong></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Course Name:</div>
                        <div class="detail-value">${certificate.courseName}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Certificate Holder:</div>
                        <div class="detail-value">${certificate.ownerName}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Wallet Address:</div>
                        <div class="detail-value">
                            <div class="wallet-address">${certificate.walletAddress}</div>
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Date Issued:</div>
                        <div class="detail-value">${formattedDate}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Grade Achieved:</div>
                        <div class="detail-value"><strong>${certificate.grade}</strong></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Credits Earned:</div>
                        <div class="detail-value">${certificate.creditsEarned} credits</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Verification Status:</div>
                        <div class="detail-value">${statusBadge}</div>
                    </div>
                `;
            }

            createStatusBadge(status) {
                const statusConfig = {
                    verified: {
                        class: 'status-verified',
                        icon: '‚úÖ',
                        text: 'Verified'
                    },
                    pending: {
                        class: 'status-pending',
                        icon: '‚è≥',
                        text: 'Pending Verification'
                    },
                    not_found: {
                        class: 'status-not-found',
                        icon: '‚ùå',
                        text: 'Not Found'
                    }
                };

                const config = statusConfig[status] || statusConfig.not_found;
                
                return `
                    <span class="verification-status ${config.class}" role="status" aria-label="Certificate ${config.text}">
                        ${config.icon} ${config.text}
                    </span>
                `;
            }

            showNoResults() {
                const resultsSection = document.getElementById('resultsSection');
                const noResultsSection = document.getElementById('noResultsSection');

                // Hide results section
                resultsSection.classList.remove('show');

                // Show no results with animation
                setTimeout(() => {
                    noResultsSection.classList.add('show');
                }, 100);

                // Scroll to no results
                noResultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            showLoadingState(isLoading) {
                const searchForm = document.getElementById('searchForm');
                const searchBtn = document.getElementById('searchBtn');
                const spinner = document.getElementById('searchSpinner');
                const btnText = document.getElementById('searchBtnText');

                if (isLoading) {
                    searchForm.classList.add('loading');
                    searchBtn.disabled = true;
                    spinner.style.display = 'inline-block';
                    btnText.textContent = 'Searching...';
                } else {
                    searchForm.classList.remove('loading');
                    searchBtn.disabled = false;
                    spinner.style.display = 'none';
                    btnText.textContent = 'üîç Search Certificate';
                }
            }

            resetSearch() {
                const searchInput = document.getElementById('certificateId');
                const resultsSection = document.getElementById('resultsSection');
                const noResultsSection = document.getElementById('noResultsSection');

                // Clear input
                searchInput.value = '';
                searchInput.focus();

                // Hide results
                resultsSection.classList.remove('show');
                noResultsSection.classList.remove('show');

                // Reset validation
                this.validateInput();

                // Clear any error states
                searchInput.classList.remove('error');
            }

            formatDate(dateString) {
                const date = new Date(dateString);
                const options = { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                };
                return date.toLocaleDateString('en-US', options);
            }

            showError(message) {
                alert(message); // In a real app, you'd show a proper error message
            }

            saveToHistory(certificateId) {
                let history = JSON.parse(localStorage.getItem('nftSearchHistory') || '[]');
                history = [certificateId, ...history.filter(id => id !== certificateId)].slice(0, 10);
                localStorage.setItem('nftSearchHistory', JSON.stringify(history));
            }

            loadSearchHistory() {
                // This could be used to show recent searches
                const history = JSON.parse(localStorage.getItem('nftSearchHistory') || '[]');
                console.log('Search history:', history);
            }
        }

        // Initialize search functionality when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new NFTCertificateSearch();
        });

        // Accessibility: Handle keyboard navigation
        document.addEventListener('keydown', (e) => {
            // ESC key to reset search
            if (e.key === 'Escape') {
                const resetBtn = document.getElementById('resetBtn');
                resetBtn.click();
            }
        });

        // Handle focus management for accessibility
        document.querySelectorAll('input, button, a').forEach(element => {
            element.addEventListener('focus', function() {
                this.style.outline = '2px solid #667eea';
                this.style.outlineOffset = '2px';
            });
            
            element.addEventListener('blur', function() {
                this.style.outline = '';
                this.style.outlineOffset = '';
            });
        });
    </script>
</body>
